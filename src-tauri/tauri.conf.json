{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vibemusic",
  "version": "0.1.0",
  "identifier": "com.music.vibe",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "vibemusic",
        "width": 1280,
        "height": 720,
        "decorations": false,
        "maximized": true,
        "minWidth": 1280,
        "minHeight": 720
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost blob: data:; font-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://asset.localhost;",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/justCallMeJeg/vibemusic/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQzNjQwRjJFQTcxOUYxNzgKUldSNDhSbW5MZzlrMHhiM1V1dlJDSllDK3NBTmFjdDh4ZzNqSmd3NUR2UU1ZeE9tVVlXREUvQ3AK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/ffmpeg", "binaries/ffprobe"]
  }
}
