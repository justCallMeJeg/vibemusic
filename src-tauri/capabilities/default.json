{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "sql:default",
    "sql:allow-execute",
    "sql:allow-select",
    "store:default",
    "dialog:default",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-appdata-write",
    {
      "identifier": "fs:scope",
      "allow": ["$APPDATA/**"]
    }
  ]
}
